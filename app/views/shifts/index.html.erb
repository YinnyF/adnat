<h2><%= current_user.membership.organisation.name %></h2>
<h3>Shifts</h3>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Break length (minutes)</th>
      <th>lorem</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <% if shift.user.membership.organisation_id == current_user.membership.organisation_id %>
      <tr>
        <td><%= shift.user_id %></td>
        <td><%= shift.start %></td>
        <td><%= shift.finish %></td>
        <td><%= shift.break_length %></td>
        <td></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>

  <tfoot>
    <%= render 'shared/new_shift_form', shift: @shift %>
  </tfoot>
</table>

<br>

<%= link_to 'New Shift', new_shift_path %>
